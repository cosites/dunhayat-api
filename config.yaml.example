env: development
log:
  level: debug

database:
  host: localhost
  port: 5432
  user: postgres
  password: postgres
  dbname: dunhayat
  sslmode: disable

redis:
  host: localhost
  port: 6379
  password: ""
  db: 0

server:
  port: 8080
  host: 0.0.0.0

auth:
  kavenegar_api_key: <api-key>
  otp_template: authentication

cors:
  allowed_origins:
    - "*"
  allowed_methods:
    - GET
    - POST
    - PUT
    - DELETE
    - OPTIONS
  allowed_headers:
    - Content-Type
    - Authorization
  allow_credentials: false

payment:
  zibal:
    merchant_id: <merchant-id>
    base_url: https://gateway.zibal.ir/v1
    timeout: 30
